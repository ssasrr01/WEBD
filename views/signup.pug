extends base

block content
    main.main
      .login-form
        h2.heading-secondary.ma-bt-lg Sign up for free
        form.form.form--signup
          .form__group
            input#email.user-form__input(type='email', placeholder='', required)
            label.user-form__label(for='email') Email address
          .form__group
            input#name.user-form__input(type='required', placeholder='', required)
            label.user-form__label(for='name') Name
          .form__group.ma-bt-md
            input#password.user-form__input(type='password', placeholder='', required, minlength='8')
            label.user-form__label(for='password') Password
            .toggle
          .form__group.ma-bt-md
            input#passwordConfirm.user-form__input(type='password', placeholder='', required, minlength='8')
            label.user-form__label(for='passwordConfirm') Confirm password
          .form__group
            button.btn.btn--gradient Sign up

